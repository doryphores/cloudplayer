{
  "name": "cloudplayer",
  "version": "0.0.1",
  "description": "Desktop player for soundcloud.com",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/doryphores/cloudplayer"
  },
  "scripts": {
    "start": "npm run build-css && npm run build-js -- -s && electron app",
    "build-js": "mkdirp app/js && babel src/js --out-dir app/js --stage 0",
    "build-css": "mkdirp app/css && node-sass src/sass -o app/css",
    "watch": "npm run build-css -- -w & npm run build-js -- -w -s"
  },
  "author": "Martin Laine",
  "license": "MIT",
  "dependencies": {
    "babel": "^5.8.29",
    "electron-prebuilt": "^0.34.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.1"
  }
}
