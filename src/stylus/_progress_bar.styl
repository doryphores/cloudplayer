.progress-bar
  display: table
  width: 100%
  height: 50px

.progress-bar__time
  display: table-cell
  padding-right: 20px
  vertical-align: middle

.progress-bar__duration
  display: table-cell
  padding-left: 20px
  vertical-align: middle

.progress-bar__slider
  position: relative
  display: table-cell
  width: 100%
  cursor: pointer
  vertical-align: middle

.progress-bar__track
  position: relative
  display: inline-block
  width: 100%
  height: 1px
  vertical-align: middle
  background-color: #353632

  span
    content: ""
    display: block
    height: 100%
    background-color: #90ad0b

.progress-bar__handle
  position: absolute
  width: 10px
  height: 10px
  top: 50%
  margin-top: -4px
  margin-left: -5px
  background-color: #90ad0b
  border-radius: 50%
  transition: transform .1s
  transform: scale(0)

  .progress-bar:hover &
    transform: scale(1)
